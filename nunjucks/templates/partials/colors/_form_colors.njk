<!-- _form_colors.njk -->
		{% if obe_settings['enable-obeb4-form-element-wheel-colors'] === 'true' %}
		<div class="container-fluid pt-5 text-center bg-white text-dark">
		
			<div class="container">
				
				<div class="row justify-content-center">
					
					<div id="{{ global_strings['colors']['sections']['24']['id'] }}" class="col-md-6 pb-5">
					
						{% set headingHeadline = global_strings['colors']['sections']['24']['head'] %}
						{% set headingSubline = global_strings['colors']['sections']['24']['subhead'] %}
						{% set headingDescrip = global_strings['colors']['sections']['24']['descrip'] %}
						{% include "partials/_columnHeading.njk" %}

						{% macro form_colors(classPartial, namePartial) %}
						<div class="js-prism text-left mb-2">
							<form>
								<div class="form-group">
									<label for="input-{{ classPartial }}" class="text-{{ classPartial }}">{{ namePartial }} Label</label>
									<input type="text" class="form-control form-{{ classPartial }}" id="input-{{ classPartial }}" placeholder="{{ namePartial }} Input">
								</div>
							</form>
						</div>
						{% endmacro %}

						{{ form_colors('primary', 'Primary') }}
						{{ form_colors('secondary', 'Secondary') }}
						{{ form_colors('success', 'Success') }}
						{{ form_colors('danger', 'Danger') }}
						{{ form_colors('warning', 'Warning') }}
						{{ form_colors('info', 'Info') }}
						{{ form_colors('light', 'Light') }}
						{{ form_colors('dark', 'Dark') }}

						{{ form_colors('white', 'White') }}
						{{ form_colors('light-gray', 'Light Gray') }}
						{{ form_colors('gray', 'Gray') }}
						{{ form_colors('dark-gray', 'Dark Gray') }}
						{{ form_colors('black', 'Black') }}

						{{ form_colors('red', 'Red') }}
