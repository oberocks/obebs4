						{{ form_colors('azure', 'Azure') }}
						{{ form_colors('cyan', 'Cyan') }}
						{{ form_colors('spring-green', 'Spring Green') }}
						{{ form_colors('green', 'Green') }}
						{{ form_colors('chartreuse', 'Chartreuse') }}
						{{ form_colors('yellow', 'Yellow') }}
						{{ form_colors('orange', 'Orange') }}

						{{ form_colors('orange-gray', 'Orange Gray') }}
