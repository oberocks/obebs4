		<div class="container-fluid pt-5 text-center bg-white text-dark">
        
            <div class="container modal-workspace">

                <div class="row justify-content-center pt-5">
                    
                    <div id="{{ global_strings['defaults']['sections']['62']['id'] }}" class="col-12">
                        
                        {% set headingHeadline = global_strings['defaults']['sections']['62']['head'] %}
						{% set headingSubline = global_strings['defaults']['sections']['62']['subhead'] %}
						{% set headingDescrip = global_strings['defaults']['sections']['62']['descrip'] %}
