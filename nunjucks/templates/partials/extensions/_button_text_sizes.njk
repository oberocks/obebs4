			<div class="container">
				
				<div class="row justify-content-center">
					
					{% if obe_settings['enable-obebs4-button-sizes'] === 'true' %}
					<div id="{{ global_strings['extensions']['sections'][6]['id'] }}" class="col-md-6 pb-5">
					
						{{ macros.page_section_heading(global_strings['extensions']['sections'][6]['head'], global_strings['extensions']['sections'][6]['subhead'], global_strings['extensions']['sections'][6]['descrip']) }}
						
						{{ macros.button_sizes('xxs', 'XXS') }}
						{{ macros.button_sizes('xs', 'XS') }}
