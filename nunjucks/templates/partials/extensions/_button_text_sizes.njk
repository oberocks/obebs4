						{{ macros.button_sizes('xxl', 'XXL') }}
						
					</div>
					{% endif %}

					{% if obe_settings['enable-obebs4-text-sizes'] === 'true' %}
					<div id="{{ global_strings['extensions']['sections'][7]['id'] }}" class="col-md-6 pb-5">

