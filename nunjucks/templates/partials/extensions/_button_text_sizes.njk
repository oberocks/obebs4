						{{ macros.text_sizes('xxs', 'XXS') }}
						{{ macros.text_sizes('xs', 'XS') }}
						{{ macros.text_sizes('sm', 'SM') }}
						{{ macros.text_sizes('md', 'MD') }}
						{{ macros.text_sizes('lg', 'LG') }}
