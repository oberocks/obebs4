                            </code>
                        </pre>
                    </div>
                    {% endmacro %}

                    {{ icon_positioning('Default Positioning:', '') }}
                    {{ icon_positioning('Position Up x10:', 'up-10') }}
                    {{ icon_positioning('Position Down x10:', 'down-10') }}
                    {{ icon_positioning('Position Left x10:', 'left-10') }}
                    {{ icon_positioning('Position Right x10:', 'right-10') }}

                </div>

            </div>

        </div>