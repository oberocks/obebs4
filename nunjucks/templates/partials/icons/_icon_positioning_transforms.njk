        <div class="container-fluid pt-5 text-center bg-white text-dark">

            <div class="container fa-workspace">

                <div class="row justify-content-center">
                    
                    <div id="{{ global_strings['icons']['sections']['6']['id'] }}" class="col-12">

                        {% set headingHeadline = global_strings['icons']['sections']['6']['head'] %}
						{% set headingSubline = global_strings['icons']['sections']['6']['subhead'] %}
						{% set headingDescrip = global_strings['icons']['sections']['6']['descrip'] %}
                        {% include "partials/_columnHeading.njk" %}

                    </div>

                </div>
                
                <div class="row justify-content-center">
                    
                    {% macro icon_positioning(label, positionClasses) %}
                    <div class="col-sm-6 col-md-4 mb-5">
                        <label class="d-block font-weight-bold pb-2">{{ label }}</label>
                        <div class="js-prism-fa prism-hidden mb-2 text-center" style="cursor: help;">
                            <span class="bg-light fa-2x">
                                <i class="fas fa-magic" data-fa-transform="{{ positionClasses }}"></i>
