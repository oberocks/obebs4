                    {{ icon_rotate_flip('180° Counterclockwise', 'rotate--180') }}
                    {{ icon_rotate_flip('270° Counterclockwise', 'rotate--270') }}
                    {{ icon_rotate_flip('Flipped Vertically', 'flip-v') }}
                    {{ icon_rotate_flip('Flipped Horizontally', 'flip-h') }}
