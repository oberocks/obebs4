                    {{ icon_rotate_flip('Default Orientation', '') }}
                    {{ icon_rotate_flip('90° Clockwise', 'rotate-90') }}
                    {{ icon_rotate_flip('180° Clockwise', 'rotate-180') }}
                    {{ icon_rotate_flip('270 Clockwise', 'rotate-270') }}
