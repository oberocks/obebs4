        <div class="container-fluid pt-5 text-center bg-white text-dark">

            <div class="container fa-workspace">

                <div class="row justify-content-center">
                    
                    <div id="{{ global_strings['icons']['sections'][7]['id'] }}" class="col-12">

                        {{ macros.page_section_heading(global_strings['icons']['sections'][7]['head'], global_strings['icons']['sections'][7]['subhead'], global_strings['icons']['sections'][7]['descrip']) }}

                    </div>

                </div>
                
                <div class="row justify-content-center">
                    
                    {% macro icon_rotate_flip(label, rotateFlip) %}
                    <div class="col-sm-6 col-md-4 mb-5">
                        <label class="d-block font-weight-bold pb-2">{{ label }}</label>
                        <div class="js-prism-fa prism-hidden mb-2 text-center" style="cursor: help;">
                            <span class="bg-light fa-2x">
                                <i class="fas fa-magic" data-fa-transform="{{ rotateFlip }}"></i>
